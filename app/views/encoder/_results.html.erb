<style>
textarea {
  width: 100%;
  height: 500px;
  padding: 12px 20px;
  box-sizing: border-box;
  border: 2px solid #ccc;
  border-radius: 4px;
  background-color: #f8f8f8;
  resize: none;
}
</style>
<textarea id="results" name="results" rows="25" cols="125" disabled>
  <% if results.nil? %>
    <%="Please select a file or paste the values"%>
  <% else %>
    <%=results%>
  <% end %>
</textarea>
