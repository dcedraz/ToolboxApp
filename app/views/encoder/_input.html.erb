<style>
textarea {
  width: 50%;
  height: 500px;
  padding: 12px 20px;
  box-sizing: border-box;
  border: 2px solid #ccc;
  border-radius: 4px;
  background-color: #f8f8f8;
  resize: none;
  float: right
}
</style>
<textarea id="input" name="input" rows="25" cols="125" disabled>
  <% if input.nil? %>
    <%="Please select a file"%>
  <% else %>
    <%=input%>
  <% end %>
</textarea>
