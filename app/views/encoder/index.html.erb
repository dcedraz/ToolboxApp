<h1>Encoder Tool</h1>

  <div class="field form-group">
<%= form_with url: encoder_upload_path(), multipart: true do |form| %>
  <label for="formFileSm" class="form-label">Please select the file to be verified: </label>
  <%= form.file_field :userfile, class:"form-control form-control-sm" %>
  </div>

<br>

<div class="input-group mb-3">
  <div class="actions">
      <%= form.submit "Upload", class:"btn btn-dark"%>
  </div>
</div>

  <%= render 'input', input: @input %>
  <%= render 'output', output: @output %>
<% end %>
